@model MVC_Proyecto.Models.Usuario
@{
    ViewData["Title"] = "IniciarSesion";
}
<header class="hero3">
    <div class="textos-hero3">
        <h1>Iniciar Sesion</h1>
    </div>
    <div class="svg-hero" style="height: 100px; overflow: hidden;">
        <svg viewBox="0 0 500 100" preserveAspectRatio="none"
             style="height: 100%; width: 100%;">
            <path d="M0.00,49.98 C149.99,150.00 349.20,-49.98 500.00,49.98 L500.00,150.00 L0.00,150.00 Z"
                  style="stroke: none; fill: #fff;"></path>
        </svg>
    </div>
</header>
<div class="container">
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Ingresar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="User" class="control-label">Usuario</label>
                    <input asp-for="User" class="form-control" required placeholder="Usuario" />
                    <span asp-validation-for="User" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PassWord" class="control-label">Contreseña</label>
                    <input asp-for="PassWord" class="form-control" type="password" required placeholder="Contraseña" />
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Iniciar Sesion" class="btn btn-dark" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-outline-dark"> Regresar</a>
    </div>
</div>